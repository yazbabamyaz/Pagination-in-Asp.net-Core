@*@model PagedList<Product>*@
@model PagedList.Core.IPagedList<Product>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=> Model[0].Id)</th>
            <th>@Html.DisplayNameFor(model=> Model[0].Name)</th>
            <th>@Html.DisplayNameFor(model=> Model[0].Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        }
        <tr>
            <td colspan="3" align="center">
                <pager list="@Model" asp-controller="Home" asp-action="Index" />
                @*Bunu kullanmak için TagHelper eklemek gerek: @addTagHelper *, PagedList.Core.Mvc*@

               
            </td>
        </tr>
    </tbody>
</table>
